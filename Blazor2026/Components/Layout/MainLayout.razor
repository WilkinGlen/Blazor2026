@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@IsDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<div class="page-layout">
    <header class="zoom-control-header" 
            style="background-color: @(IsDarkMode ? "#1e1e1e" : "#ffffff"); border-bottom: 1px solid @(IsDarkMode ? "#4a4a4a" : "#e0e0e0");">
        <div class="header-content">
            <ZoomControl />
            <MudTooltip Text="@(IsDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")">
                <MudIconButton Icon="@(IsDarkMode ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)" 
                    Color="Color.Primary"
                    OnClick="@ToggleDarkMode" />
            </MudTooltip>
        </div>
    </header>
    
    <main class="page-content">
        <ZoomContainer>
            @Body
        </ZoomContainer>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
